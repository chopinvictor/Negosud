@model IEnumerable<Negosud.Class.Produit>

@{
    ViewData["Title"] = "Index";
}

<h1 class="gold pb-5">Liste de nos articles</h1>


<table class="tableliste table" id="montableau">
    <thead>
        <tr>
            <th>
                Nom
            </th>
            <th>
                Prix Unitaire
            </th>
            <th>
                Type
            </th>
            <th>
                Domaine
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomProduit)
            </td>
            <td>
                    @item.PrixProduit.ToString("N2")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type.NomType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Domaine.NomDomaine)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="retirsoulign">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section scripts{

	<script>
        $(document).ready(function () {
            $('#montableau').DataTable();
        });
	</script>
}